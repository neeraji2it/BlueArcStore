  <!-- main-container -->
  <div class="main-container col2-right-layout">
    <div class="main container">
      <div class="row">
        <section class="col-main col-sm-9 wow bounceInUp animated">
          <div class="page-title">
            <h2>Contact Us</h2>
          </div>
           <%= form_for @contact, :url => contact_path, :html => {:method => 'POST'}, :remote => true do |f| %>
          <div class="static-contain">
            <fieldset class="group-select">
              <ul>
                <li id="billing-new-address-form">
                  <fieldset>
                    <legend>New Address</legend>
                    <input type="hidden" name="billing[address_id]" value="" id="billing:address_id">
                    <ul>
                      <li>
                        <div class="customer-name">
                          <div class="input-box name-firstname">
                            <label for="billing:firstname">Name <span class="required">*</span></label>
                            <br><!-- 
                            <input type="text" id="billing:firstname" name="billing[firstname]" value="" title="First Name" class="input-text "> -->
                            <%= f.text_field :name, id: 'billing:name', title: 'Full Name', class: 'input-text' %>
                          </div>
                        </div>
                      </li>
                      <li>
                          <div class="input-box name-lastname">
                            <label for="billing:lastname"> Email Address <span class="required">*</span> </label>
                            <br>
                            <%= f.email_field :email, id: 'billing:email', title: 'Email Address', class: 'input-text validate-email' %>
                          </div>
                      </li>
                      <li>
                         <div class="input-box">
                          <label for="billing:email">Option <span class="required">*</span></label>
                          <br>
                          <%= f.select :option, %w(Question Issue), id: 'billing:email' ,title: "Option",class: "input-text validate-email"%>
                        </div>
                      </li>
                      <li class="">
                        <label for="comment">Message<em class="required">*</em></label>
                        <br>
                        <div style="float:none" class="">
                          <%= f.text_area :message,id: "comment", title: "Comment", class: "required-entry input-text", :cols => "5", :rows =>"3"  %>
                        </div>
                      </li>
                    </ul>
                  </fieldset>
                </li>
                <p class="require"><em class="required">* </em>Required Fields</p>
                <input type="text" name="hideit" id="hideit" value="" style="display:none !important;">
                <div class="buttons-set">
                <%= f.submit "Contact",title: "Submit" ,class: "button submit"  %>
                </div>
              </ul>
            </fieldset>
          </div>
          <% end %>
        </section>
