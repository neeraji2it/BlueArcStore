<div class="container">
 <div class="col-md-6 col-md-offset-3">
    <div class="panel-heading">
  <h5> Sorry the selected Product is not avialable in the stock.</h5>
  <h5> Please give me Your Details.We
will inform you once the product is in the Stock </h5>
    </div>
  <%= form_for @cart_detail, :url => cart_info_carts_path, :method => "POST"  do |f| %>
       <div class="panel-body">

  <% if @cart_detail.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cart_detail.errors.count, "error") %> prohibited your details from being saved:</h2>

      <ul>
      <% @cart_detail.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Name %><br>
    <%= f.text_field :name %>
  </div><br/>

  <div class="field">
    <%= f.label :Email %><br>
    <%= f.email_field :email %>
  </div><br/>


   <div class="field">
    <%= f.label :Phone %><br>
    <%= f.text_field :phone_no %>
  </div>
<br/>

  <div class="actions">
    <%= f.submit "Send Details", :class => "btn btn-default" %>
  </div>
  </div>
<% end %>
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
</div>
</div>

<style>


#error_explanation {
  color: #f00;
   border: 1px solid #CCC;
   margin-bottom: 20px;
   padding: 10px;
  ul {
    list-style: none;
    margin: 0 0 18px 0;
  }
}

.field_with_errors {
  padding: 1px;
  background-color: #f00;
  display: table;
}

</style>







