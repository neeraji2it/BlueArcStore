<div class="page">
<section class="main-container col1-layout">
  <div class="main container">
      <h4>
        Sign Up as <%= params[:role].capitalize %>
        <span style="float: right;left: -10px;position: relative;"><%= render :partial => "/devise/shared/signin" if params[:role] == 'buyer' %></span>
      </h4>
      <div>
        <%= form_for @user do |f| %>
        <%= render :partial => 'form', :locals => {:f => f} %>
      <% end %>
      </div>
    </div>
  </section>
</div>
